    // vim configuration
    "vim.searchHighlightColor": "#fbfcf9",
    "vim.searchMatchColor": "#daa520",
    "vim.cursorStylePerMode.normal": "block",
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": false,
    "vim.highlightedyank.enable": true,
    "vim.history": 1000,
    
    // git configuration
    "git-graph.date.format": "ISO Date Only",
    "gitlens.currentLine.uncommittedChangesFormat": "✏️ ${ago}",
    "gitlens.graph.showRemoteNames": true,
    "gitlens.views.contributors.pullRequests.enabled": false,
    "gitlens.graph.avatars": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.hovers.autolinks.enhanced": false,
    "gitlens.defaultDateStyle": "absolute",
    "gitlens.defaultDateFormat": "YYYY-MM-DD",
    "gitlens.statusBar.alignment": "left",
    "gitlens.statusBar.dateFormat":"YYYY-MM-DD",
    "gitlens.currentLine.dateFormat":"YYYY-MM-DD",
    "gitlens.blame.dateFormat": "YYYY-MM-DD",
    "files.exclude": {
        ".repo": true,
        "**/.classpath": true,
        "**/.factorypath": true,
        "**/.project": true,
        "**/.settings": true
    },
    "explorer.autoRevealExclude": {
    "**/output": true,
    "**/out": true
  },
    
    // file configuration
    "files.autoSave": "onFocusChange",
    "files.defaultLanguage": "c",

    // theme configuration
    "screencastMode.fontSize": 48,
    "screencastMode.keyboardShortcutsFormat": "command",
    "screencastMode.verticalOffset": 0,
    "terminal.integrated.unicodeVersion": "11",
    "timeline.pageSize": 10,
    //"workbench.iconTheme": "material-icon-theme",
    "workbench.startupEditor": "newUntitledFile",
    "explorer.confirmDragAndDrop": false,
    "files.trimFinalNewlines": true,
    // The default syntax (TextMate) highlighter classifies many tokens as variables and these are now (since VSCode 1.43) resolved into namespaces, classes, parameters, and so on. This is called Semantic highlighting support for TypeScript and JavaScript. But many themes and language extensions seem broken with single-colored syntax. This came as a surprise to me. It's set `true` by default. I recommend disabling this for now.
    "editor.semanticHighlighting.enabled": false,
    "security.workspace.trust.untrustedFiles": "open",
    
    // code-runner configuration
    "code-runner.saveFileBeforeRun": true,
    "code-runner.defaultLanguage": "bash",
    "code-runner.customCommand": "cd $workspaceRoot;./build.sh kernel",
    "code-runner.executorMap": {
        "bash": "cd $workspaceRoot;./build.sh",
        "c": "cd $workspaceRoot;./build.sh",
        "cpp": "cd $workspaceRoot;./build.sh",
        "java": "cd $workspaceRoot;./build.sh",
    },
    // "code-runner.runInTerminal": true,

    "workbench.commandPalette.history": 9999,
    "scm.alwaysShowActions": true,
    "diffEditor.codeLens": true,
    "editor.comments.insertSpace": false,
    "editor.trimAutoWhitespace": false,
    
    // C_Cpp configuration
    "C_Cpp.default.configurationProvider": "NULL",
    "C_Cpp.default.mergeConfigurations": true,
    "C_Cpp.loggingLevel": "Debug",
    "C_Cpp.vcpkg.enabled": false,
    "C_Cpp.vcFormat.space.afterComma": false,
    "C_Cpp.formatting": "disabled",
    "C_Cpp.clang_format_fallbackStyle": "GNU",
    //"C_CPP.default.intelliSenseMode":"linux-gcc-arm",
    "C_Cpp.default.cStandard": "gnu99",
    "C_Cpp.default.cppStandard": "gnu++11",
    "C_Cpp.intelliSenseEngineFallback": "disabled",
    "C_Cpp.codeAnalysis.clangTidy.checks.disabled": [],
    // Clangd need disable
    "C_Cpp.intelliSenseEngine": "disabled",
    "C_Cpp.addNodeAddonIncludePaths": false,
    "C_Cpp.inlayHints.autoDeclarationTypes.showOnLeft": true,
    "clangd.arguments": [
        "--log=error",
		"--enable-config",
        "--background-index",
		"--pch-storage=memory",
        "--fallback-style=GNU",
        "--all-scopes-completion",
        "--offset-encoding=utf-16",
		"--header-insertion=never",
		"--completion-style=detailed",
        "--header-insertion-decorators",
		"--function-arg-placeholders=false",
        "--compile-commands-dir=${workspaceFolder}/}"
    ],

    "clangd.checkUpdates": true,
    //"clangd.path": "/usr/bin/clangd",
    "C_Cpp.autocomplete": "disabled",
    "C_Cpp.default.systemIncludePath": [
        "${workspaceRoot}/kernel/include/**",
        "${workspaceFolder}/kernel/include/**",
        "${workspaceRoot}/u-boot/include/**",
        "$workspaceRoot/kernel/include/**",
        "$workspaceRoot",
        "${workspaceFolder}/**"
    ],
    "search.useGlobalIgnoreFiles": true,
    "files.autoSaveDelay": 100000,
    "remote.restoreForwardedPorts": false,
    "terminal.integrated.copyOnSelection": true,
    "workbench.editor.scrollToSwitchTabs": true,
